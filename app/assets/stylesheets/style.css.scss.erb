body, html, div, blockquote, img, label, p, h1, h2, h3, h4, h5, h6, pre, ul, ol,

li, dl, dt, dd, form, a, fieldset, input, th, td

{margin: 0; padding: 0; outline: none;}



body{line-height:1; background-image:url(<%= asset_path "fundof.jpg" %>);} /*---- 1.0 em = 10px---*/



h1, h2, h3, h4, h5, h6{font-size:100%;}



ul, ol{list-style:none;}

#centralize{
  width: 970px;
  margin: 0 auto;
}

#header{
  margin-top: 30px;
  padding: 15px 0px 60px 20px;
  width: 1037px;
  background-image:url(<%= asset_path "wallpaper_by_salvog92.jpg" %>);
  -moz-border-radius: 13px 13px 0px 0px;
  -webkit-border-radius: 13px 13px 0px 0px;
}

#subheader{
  float: right;
  margin-top: 0px;
}

#subheader p{
  margin-right: 10px;
  font-size: 14px;
}

#subheader a{

}

#subheader img{
  margin-right: 10px;
}

#subheader #login{float:right;text-align:center;}

#menu{
  margin-top: 0px;
  font-size: 12px;
  margin-left: 250px;
}

#menu a{
  font-size: 14px;
  color: white;
  float: left;
  margin-left: 20px;
  text-decoration:none;
  background-color: #28a528;
  padding: 15px 30px 15px 30px;
  -moz-border-radius: 22px;
  -webkit-border-radius: 18px;
}

#menu A:hover{
  font-size: 14px;
  color: white;
  float: left;
  margin-left: 20px;
  text-decoration:none;
  background-image: url(<%= asset_path "botaox1.png" %>);
  padding: 15px 30px 15px 30px;
  -moz-border-radius: 22px;
  -webkit-border-radius: 18px;
}


#content{
  width: 1056px;
  background-image: url(<%= asset_path "fundo1.jpg" %>);
  color: white;
  height: 780px;
}

#content img{float: left;}

#slider{
  width: 200px;
  height: 400px;
  margin-bottom: 40px;
  padding-bottom: 100px;
}

#slider ul{float:left;}

#slider h1{
  color:#28a528;
  font-size: 40px;
  margin-left: 30px;
  margin-top: 20px;
  text-transform: uppercase;
}

#slider p{
  font-size: 20px;
  width: 550px;
  margin-top: 10px;
  margin-left: 30px;
}

#prevBtn{float: left;margin-left: 30px;}

#prevBtn a{
  text-decoration:none;
}

#nextBtn{float: right;margin-right: 70px;}

#nextBtn a{
  text-decoration:none;
}

#about{
  border: solid 1px white;
  height: 350px;
  background-color: #B0B0B0;
}

#ranks{
  margin-top: 30px;
}

#escalation{
  background-image:url(<%= asset_path "botaox1.png" %>);
  float: left;
  margin-left: 80px;
}

#escalation iframe{margin-bottom: 40px;padding-top:60px;padding-left:60px;}


#escalation h2{
  font-size: 16px;
  text-align: center;
  width: 50px;
  height: 70px;
}

#escalation h2 p{
  padding-top: 30px;
  padding-left: 90px;
}

#escalation ul{
  text-align: center;
  padding: 0px 0px 0px 0px;
  margin-bottom: 40px;
}

#escalation li{
  text-align: center;
  font-size: 15px;
  padding: 22px 60px 22px 40px;
  width: 156px;
}

#escalation LI:hover{
  background-image:url(<%= asset_path "transparente.png" %>);
  width: 156px;
}

#escalation a{
  color:black;
  text-decoration:none;
}

#scroll h1{
  margin-top:20px;
}

#scroll{
  position: relative; 
  width: 90%; text-align: auto; margin-left: auto; margin-right: auto;
  overflow:auto;
}

#footer{
  width: 1056px;
  background-image:url(<%= asset_path "wallpaper_by_salvog92.jpg" %>);
  color: white;
  margin-bottom: 40px;
  height: 110px;
  -moz-border-radius: 0px 0px 13px 13px;
  -webkit-border-radius: 0px 0px 13px 13px;
}

#footer p{
  font-size: 14px;
  padding-top: 50px;
  padding-left: 20px;
  text-align: left;
  color: #1d1e1d;
  float: left;
}

#footer .license{
  font-size:10px;
}

#footer img{
  float: right;
  margin-right: 20px;
  margin-top: 40px;
}
